{% if pageCount > 1 %}<ul class="pagination padding-5">{% if previous is defined %}<li><a href="{% if previous == 1 %}{{ path(route, query|merge({(pageParameterName): NULL})) }}{% else %}{{ path(route, query|merge({(pageParameterName): previous})) }}{% endif %}">&larr;</a></li>{% else %}<li class="disabled"><span>&larr;</span></li>{% endif %}
    {% if startPage > 1 %}<li><a href="{{ path(route, query|merge({(pageParameterName): NULL})) }}">1</a></li>{% if startPage == 3 %}<li><a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a></li>{% elseif startPage != 2 %}<li class="disabled"><span>&hellip;</span></li>{% endif %}{% endif %}
    {% for page in pagesInRange %}{% if page != current %}<li><a href="{% if page == 1 %}{{ path(route, query|merge({(pageParameterName): NULL})) }}{% else %}{{ path(route, query|merge({(pageParameterName): page})) }}{% endif %}">{{ page }}</a></li>{% else %}<li class="active"><span>{{ page }}</span></li>{% endif %}{% endfor %}
    {% if pageCount > endPage %}{% if pageCount > (endPage + 1) %}{% if pageCount > (endPage + 2) %}<li class="disabled"><span>&hellip;</span></li>{% else %}<li><a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a></li>{% endif %}{% endif %}<li><a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a></li>{% endif %}
    {% if next is defined %}<li><a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&rarr;</a></li>{% else %}<li class="disabled"><span>&rarr;</span></li>{% endif %}</ul>{% endif %}