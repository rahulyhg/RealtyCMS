{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
        	if($("#owl-first").length) {
				$("#owl-first").owlCarousel({
					items: 1,
					autoHeight: false,
					lazyLoad: true,
					navigation: true,
					responsive: false,
					navigationText: false
				});
			}
			if($("#owl-agents").length) {
				$("#owl-agents").owlCarousel({
					lazyLoad: true,
					navigation: true,
					itemsCustom: [
						[0, 1],
						[400, 2],
						[800, 3]
					],
					navigationText: false
				});
			}
			if($("#owl-docs").length) {
				$("#owl-docs").owlCarousel({
					items: 4,
					itemsCustom: [
						[0, 1],
						[400, 2],
						[600, 3],
						[800, 4]
					],
					lazyLoad: true,
					navigation: true,
					navigationText: false
				});
			}
			if($("#owl-clients").length) {
				$("#owl-clients").owlCarousel({
					items: 6,
					itemsCustom: [
						[0, 2],
						[400, 3],
						[800, 6]
					],
					lazyLoad: true,
					navigation: true,
					navigationText: false
				});
			}
        });
    </script>    
