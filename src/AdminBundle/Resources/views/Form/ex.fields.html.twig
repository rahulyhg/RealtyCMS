{% if object_types_fields is defined %}
<div class="clearfix">
    <h2>Поля типа объектов:</h2>
    <div class="clearfix"><a href="{{ path('admin_objectstypes_addfield',{'id':item.id}) }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Добавить поле</a></div><br>
    <div class="highlight">

        <table class="table table-striped table-hover" id="sortFixed">
            <thead>
            <tr>
                <th>ID</th>
                <th>Поле</th>
                <th>Тип поля</th>
                <th>Обязательное</th>
                <th>Показывать в фильтре</th>
                <th colspan="2">Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for field in item.ObjectTypesFieldss if field %}
                <tr id="{{ field.id }}" data-sort="{{ field.sort }}">
                    <td>{{ field.id }}</td>
                    <td><a href="{{ path('admin_objectstypes_editfield',{'id':field.id}) }}">{{ field.name }}</a></td>
                    <td>{% if field.type == 1 %}Текстовое поле{% elseif field.type == 2 %}Список{% elseif field.type == 3 %}Числовое поле{% elseif field.type == 4 %}Числовой список{% else %}Флажок{% endif %}</td>
                    <td>{% if field.required %}<span class="glyphicon glyphicon-ok"></span>{% endif %}</td>
                    <td>{% if field.showInFilter %}<span class="glyphicon glyphicon-ok"></span>{% endif %}</td>
                    <td><a href="{{ path('admin_objectstypes_editfield',{'id':field.id}) }}"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><a class="confirm-delete" href="" data-toggle="modal" data-target="#deleteModal" data-path="{{ path('admin_objectstypes_deletefield',{'id':field.id}) }}" title="Удалить"><span class="glyphicon glyphicon-trash"></span></a></td>
                </tr>
            {% else %}
                <tr><td colspan="6">Нет полей</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}