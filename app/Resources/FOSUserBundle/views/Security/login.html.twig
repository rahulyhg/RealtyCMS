{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title 'Авторизация' %}
{% block fos_user_content %}
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <div class="text-center"><img width="200" src="/images/logo_top.png" alt="Авторизация"></div><br>
        <h4 class="form-signin-heading text-center">Авторизация</h4>
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Закрыть"><span aria-hidden="true">&times;</span></button>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <label for="username" class="sr-only">Email</label>
        <input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Email" required autofocus>
        <label for="password" class="sr-only">Пароль</label>
        <input type="password" id="password" name="_password" class="form-control" placeholder="Пароль" required>
        <div class="checkbox text-center">
            <label>
                <input type="checkbox" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <input type="hidden" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>
    </form>

{% endblock fos_user_content %}
