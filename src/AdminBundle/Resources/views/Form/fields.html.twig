{% block form_label %}
    {% spaceless %}
        {% if label is not sameas(false) %}
            {% if not compound %}
                {% set label_attr = label_attr|merge({'for': id}) %}
            {% endif %}
            {% if label is empty %}
                {% set label = name|humanize %}
            {% endif %}
            <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %} class="col-sm-3 control-label">{{ label|trans({}, 'FOSUserBundle') }}</label>
        {% endif %}
    {% endspaceless %}
{% endblock form_label %}

{% block datetime_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            {% if widget == 'single_text' %}
                {% set type = type|default('text') %}
                <input type="{{ type }}" class="form-control datepicker" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
            {% else %}
                <div {{ block('widget_container_attributes') }}>
                    {{ form_errors(form.date) }}
                    {{ form_errors(form.time) }}
                    {{ form_widget(form.date) }}
                    {{ form_widget(form.time) }}
                </div>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock datetime_widget %}

{% block date_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            {% if widget == 'single_text' %}
                {{ block('form_widget_simple') }}
            {% else %}
                <div {{ block('widget_container_attributes') }}>
                    {{ date_pattern|replace({
                        '{{ year }}':  form_widget(form.year),
                        '{{ month }}': form_widget(form.month),
                        '{{ day }}':   form_widget(form.day),
                    })|raw }}
                </div>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock date_widget %}

{% block time_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            {% if widget == 'single_text' %}
                {{ block('form_widget_simple') }}
            {% else %}
                {% set vars = widget == 'text' ? { 'attr': { 'size': 1 }} : {} %}
                <div {{ block('widget_container_attributes') }}>
                    {{ form_widget(form.hour, vars) }}{% if with_minutes %}:{{ form_widget(form.minute, vars) }}{% endif %}{% if with_seconds %}:{{ form_widget(form.second, vars) }}{% endif %}
                </div>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock time_widget %}

{% block textarea_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            <textarea class="form-control" {{ block('widget_attributes') }}>{% if value is defined %}{{ value }}{% endif %}</textarea>
        </div>
    {% endspaceless %}
{% endblock textarea_widget %}

{% block text_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            {% if 'user_id' in name %}
                <div class="input-group">
                    <span class="input-group-btn">
                        <a href="{{ path('admin_users_edit',{'id': value}) }}" class="btn btn-default"><i class="fa fa-fw fa-user"></i></a>
                    </span>
                    <input type="text" class="form-control" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}>
                </div>
            {% elseif 'alias' in name %}
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="fill_alias()"><i class="fa fa-fw fa-magic"></i></button>
                    </span>
                    <input type="text" class="form-control" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}>
                </div>
            {% elseif 'name' in name or 'title' in name %}
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="capitalize(this)"> Aa </button>
                    </span>
                    <input type="text" class="form-control" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}>
                </div>
            {% else %}
                <input type="text" class="form-control" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock text_widget %}

{% block email_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            <input type="email" class="form-control" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value }}"{% endif %}">
        </div>
    {% endspaceless %}
{% endblock email_widget %}

{% block password_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            <input type="password" class="form-control" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value }}"{% endif %}">
        </div>
    {% endspaceless %}
{% endblock password_widget %}

{% block percent_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            <input type="text" data-horizontal="true" class="form-control" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value }}"{% endif %}">
        </div>
    {% endspaceless %}
{% endblock percent_widget %}

{% block checkbox_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        </div>
    {% endspaceless %}
{% endblock checkbox_widget %}

{% block choice_widget %}
    {% spaceless %}
        {% if expanded %}
            <div class="col-sm-2">
                {{ block('choice_widget_expanded') }}
            </div>
        {% else %}
            <div class="col-sm-9">
                {{ block('choice_widget_collapsed') }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock choice_widget %}

{% block choice_widget_expanded %}
    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>
            {% for child in form %}
                <div class="clearfix">
                    {{ form_widget(child) }}
                    {{ form_label(child) }}
                </div>
            {% endfor %}
        </div>
    {% endspaceless %}
{% endblock choice_widget_expanded %}

{% block choice_widget_collapsed %}
    {% spaceless %}
        {% if required and empty_value is none and not empty_value_in_choices %}
            {% set required = false %}
        {% endif %}
        <select class="form-control" {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
            {% if empty_value is not none %}
                <option value=""{% if required and value is empty %} selected="selected"{% endif %}>{{ empty_value|trans({}, translation_domain) }}</option>
            {% endif %}
            {% if preferred_choices|length > 0 %}
                {% set options = preferred_choices %}
                {{ block('choice_widget_options') }}
                {% if choices|length > 0 and separator is not none %}
                    <option disabled="disabled">{{ separator }}</option>
                {% endif %}
            {% endif %}
            {% set options = choices %}
            {{ block('choice_widget_options') }}
        </select>
    {% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block choice_widget_options %}
    {% spaceless %}
        {% for group_label, choice in options %}
            {% if choice is iterable %}
                <optgroup label="{{ group_label|trans({}, translation_domain) }}">
                    {% set options = choice %}
                    {{ block('choice_widget_options') }}
                </optgroup>
            {% else %}
                <option value="{{ choice.value }}"{% if choice is selectedchoice(value) %} selected="selected"{% endif %}>{{ choice.label|trans({}, translation_domain) }}</option>
            {% endif %}
        {% endfor %}
    {% endspaceless %}
{% endblock choice_widget_options %}

{% block form_row %}
    {% spaceless %}
        {{ form_errors(form) }}
        <div class="form-group clearfix">
            {{ form_label(form) }}
            {{ form_widget(form) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block submit_widget %}
    {% spaceless %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}
        <div class="col-sm-offset-3 col-sm-9">
            <button type="{{ type|default('submit') }}" {{ block('button_attributes') }} class="btn btn-success">{{ label|trans({}, translation_domain) }}</button>
        </div>
    {% endspaceless %}
{% endblock submit_widget %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block file_widget %}
    {% spaceless %}
        {% set type = type|default('file') %}
        <div class="col-sm-9">
            <input type="{{ type }}" {{ block('widget_attributes') }}/>
        </div>
    {% endspaceless %}
{% endblock file_widget %}

{% block color_widget %}
    {% spaceless %}
        <div class="col-sm-9">
            <input type="color" class="form-control" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value }}"{% endif %}">
        </div>
    {% endspaceless %}
{% endblock color_widget %}