					<div class="col-sm-6 col-md-4 clearfix">
						<div class="number">{{ i }}</div>
						<div class="descr">
							<h4>{{ settings.wtitle(i) }}</h4>
							<p>{{ settings.wtext(i) }}</p>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
