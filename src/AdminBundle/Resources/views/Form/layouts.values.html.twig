{% if layouts_type_field is defined %}
    {% if layouts_type_field == 2 or layouts_type_field == 4 %}
    <div class="clearfix">
        <h2>Возможные значения:</h2>
        <div class="clearfix"><a href="{{ path('admin_layouts_addvalue',{'id':item.id}) }}" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> Добавить значение</a>
            <a href="{{ path('admin_layouts_addvalues',{'id':item.id}) }}" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> Добавить несколько значений</a></div><br>
        <div class="clearfix highlight table-responsive">
            <table class="table table-striped table-hover" id="sortFixed" data-sort="{{ path('admin_layouts_sortvalues') }}">
                <thead>
                <tr>
                    <th>Порядок</th>
                    <th>Значение</th>
                    <th colspan="2" class="action">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for value in item.LayoutsFieldsValuess if value %}
                    <tr id="{{ value.id }}" data-sort="{{ value.sort }}">
                        <td><i class="fa fa-ellipsis-v fa-fw handle"></i> {{ value.sort }}</td>
                        <td><a href="{{ path('admin_layouts_editvalue',{'id':value.id}) }}">{{ value.name }}</a></td>
                        <td colspan="2" class="action">
                            <a href="{{ path('admin_layouts_editvalue',{'id':value.id}) }}" title="Редактировать"><span class="glyphicon glyphicon-edit"></span></a>
                            <a class="confirm-delete" href="" data-toggle="modal" data-target="#deleteModal" data-path="{{ path('admin_layouts_deletevalue',{'id':value.id}) }}" title="Удалить"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="4">Нет значений</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
{% endif %}